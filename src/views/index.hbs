<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto text-center">
      <!-- WEATHER FORM -->
      <div class="card mt-4">
        <div class="card-body">
          <form id="w-form" action="/vuelos" method="POST">
            <div class="form-group">
              <input type="text" name="city" id="city" class="form-control" placeholder="City" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="iATACode" id="iATACode" class="form-control"
                placeholder="City/Airport IATA code">
            </div>
            <div class="form-group">
              <input type="text" name="countryCode" id="countryCode" class="form-control" placeholder="Country Code">
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-dark btn-block" id="w-change-btn">
                Save Changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="carouselExampleIndicators" class="carousel slide col-md-5 mx-auto text-center" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="/public/img/1.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 text-center" src="/public/img/2.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/public/images/logo.png" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>